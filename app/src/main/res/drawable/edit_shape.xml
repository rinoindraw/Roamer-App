<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set warna latar belakang -->
    <solid android:color="@color/white" /> <!-- Ganti kode warna sesuai keinginan Anda -->

    <!-- Set border -->
    <stroke
        android:width="2dp"
        android:color="@color/grey" />

    <!-- Set padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <corners android:radius="25dp"/>


</shape>
